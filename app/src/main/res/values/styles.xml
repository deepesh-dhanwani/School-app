<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MenuTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item> <!-- Set the desired text size -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item> <!-- Make text bold --><!-- Optional: Set text color -->
    </style>
    <style name="Theme.YourAppName" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- App bar color -->
        <item name="colorPrimary">@color/purple</item>
        <!-- App bar text and icon color -->
        <item name="colorOnPrimary">@android:color/white</item>
    </style>
    <style name="MenuText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">30dp</item> <!-- Set the desired text size -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item> <!-- Make text bold --><!-- Optional: Set text color -->
    </style>
    <!-- Contact Info Item Style -->
    <style name="ContactInfoItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/contact_info_background</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="ContactFormEditText" parent="Widget.AppCompat.EditText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:padding">16dp</item>
    <item name="android:background">@drawable/edit_text_background</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColorHint">#757575</item>
    <item name="android:layout_marginTop">12dp</item>
    <item name="android:drawablePadding">12dp</item>
</style>

    <!-- Submit Button Style -->
<style name="ContactFormButton" parent="Widget.MaterialComponents.Button">
<item name="android:layout_width">match_parent</item>
<item name="android:layout_height">56dp</item>
<item name="android:layout_marginTop">24dp</item>
<item name="android:textSize">16sp</item>
<item name="android:textAllCaps">false</item>
<item name="android:letterSpacing">0.03</item>
<item name="cornerRadius">8dp</item>
</style>

    <!-- Section Title Style -->
<style name="SectionTitleStyle">
<item name="android:layout_width">match_parent</item>
<item name="android:layout_height">wrap_content</item>
<item name="android:textSize">20sp</item>
<item name="android:textStyle">bold</item>
<item name="android:textColor">@color/colorPrimary</item>
<item name="android:layout_marginBottom">16dp</item>
</style>
</resources>